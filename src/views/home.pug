//- home.pug

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title My Zoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        style.
            /* Inline CSS styles */
            body {
                display: flex;
                flex-direction: column;
                align-items: center;
                background-color: #f4f4f9;
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 20px;
            }

            header {
                margin-bottom: 30px;
                text-align: center;
            }

            main {
                display: flex;
                flex-direction: column;
                width: 100%;
                max-width: 900px;
                background-color: #ffffff;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                padding: 20px;
            }

            #welcome, #call, #chat {
                margin-bottom: 20px;
            }

            form {
                display: flex;
                align-items: center;
                gap: 10px;
            }

            input[type="text"], input[type="button"], button, select {
                padding: 10px;
                font-size: 1em;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            button, input[type="button"] {
                background-color: #007bff;
                color: white;
                cursor: pointer;
                transition: background-color 0.3s;
            }

            button:hover, input[type="button"]:hover {
                background-color: #0056b3;
            }

            #myStream {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 10px;
            }

            #myNickname {
                display: flex;
                align-items: center;
                gap: 10px;
            }

            video {
                border: 2px solid #ccc;
                border-radius: 8px;
            }

            #messages {
                list-style: none;
                padding: 0;
                max-height: 200px;
                overflow-y: auto;
                background-color: #f1f1f1;
                border-radius: 4px;
                padding: 10px;
            }

            #messages li {
                margin-bottom: 10px;
                padding: 8px;
                background-color: #e1e1e1;
                border-radius: 4px;
            }
    body
        header
            h1 My Zoom üòäüñ•Ô∏è
        main
            div#welcome
                form    
                    input(placeholder="room name", required, type="text")
                    button(type="submit") Enter room
            div#call
                div#myStream
                    video#myFace(autoplay, playsinline, width="400", height="400")
                    button#mute(type="button") Mute
                    button#camera(type="button") Camera Off
                    select#cameras
                    video#peerFace(autoplay, playsinline, width="400", height="400")
                div#myNickname
                    input#nicknameInput(placeholder="nickname (default=anon)", required)
                    button#nicknameSubmit(type="button") Set Nickname
            div#chat
                ul#messages
                form#messageForm
                    input(placeholder="message", required, type="text")
                    button(type="submit") Send
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")
