//- html
//- home.pug

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title My Zoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 My Zoom
        main
            div#welcome
                form    
                    input(placeholder="room name", required, type="text")
                    button(type="submit") Enter room
            div#call
                div#myStream
                    video#myFace(autoplay, playsinline, width="400", height="400")
                    button#mute(type="button") Mute
                    button#camera(type="button") Camera Off
                    select#cameras
                    video#peerFace(autoplay, playsinline, width="400", height="400")
                div#myNickname
                    input#nicknameInput(placeholder="nickname (default=anon)", required)
                    button#nicknameSubmit(type="button") Set Nickname
            div#chat
                ul#messages
                form#messageForm
                    input(placeholder="message", required, type="text")
                    button(type="submit") Send
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")
